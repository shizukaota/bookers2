<html>
<body>

	<h1>Books</h1>
	<table>
		<% @blogs.each do |blog| %>
		<p>タイトル</p>
		<%= blog.title %>
		<P> Body  </p>
		<span><%= blog.body %></span>
		<% end %>
	</table>


<h1>NEW BOOK</h1>
<%= form_for(@blog) do |f| %>

<h4>Title</h4>
<%= f.text_field :title,class: "book_title" %>

<h4>Body</h4>
<%= f.text_area :body,class: "book_body" %>
<%= f.submit 'Create Book' %>
<% end %>
</body>
</html>