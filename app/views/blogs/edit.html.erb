
<p><%= flash[:id] %></p>
<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@blog) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, class:"book_title" %>
    <h4>Body</h4>
    <%= f.text_area :body, class:"book_body" %>
    <%= f.submit 'Update Book' %>

<% end %>

    <%= link_to "show",blog_path(@blog.id),class:"show_#{@blog.id}" %>
    <%= link_to "back", blogs_path,class:"back" %>